<table class="table table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Cantidad</th>
    <th>Precio</th>
  </tr>
  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.product.model %></td>
    </tr>
  <% end %>
</table>
<table class="table table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Cantidad</th>
    <th>Precio</th>
    <th>Reserva</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.quantity %></td>
      <td><%= product.price %></td>
      <td><%= link_to "asd", reservation_cabin_product_path(reservation_id: @reservation.id, id: product), method: :post%></td>
    </tr>
  <% end %>
</table>
