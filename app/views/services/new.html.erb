<div class="container">
  <h1>Servicio</h1>
  <%= form_for [@cabin,@service]  do |f| %>
  <% if @service.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @service.errors.full_messages.each do |msg| %>
            <li  class="alert alert-danger" role="alert"><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% if @cabin.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@cabin.errors.count, "error") %>
          </h2>
          <ul>
            <% @cabin.errors.full_messages.each do |msg| %>
              <li  class="alert alert-danger" role="alert"><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <p>
        <%=f.label :Nombre  %></br>
        <%=f.text_field :name %>
        </p>
        <p>
        <%=f.label :Cantidad %></br>
        <%=f.text_field :quantity %>
        </p>
        <p>
        <%=f.label :Precio %></br>
        <%=f.text_field :value %>
        </p>
      <%=f.submit :Guardar, :class => 'btn btn-info'%>
      </div>
      <% end %>
      </div>
