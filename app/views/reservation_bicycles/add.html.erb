
<table class="table table-bordered">
  <tr>
    <th>Modelo</th>
    <th>Tipo</th>
    <th>Aro</th>    
    <th>Valor</th>
  </tr>   


  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.bicycle.model %></td>
   
    </tr>
  <% end %>

</table>

<table class="table table-bordered">
  <tr>
    <th>Modelo</th>
    <th>Tipo</th>
    <th>Aro</th>    
    <th>Valor</th>
    <th>Reserva</th>
  </tr>   


  <% @bicycles.each do |bicycle| %>
    <tr>
      <td><%= bicycle.model %></td>
      <td><%= bicycle.tipo %></td>
      <td><%= bicycle.ring_size %></td>
      <td><%= bicycle.value %></td>
      <td><%= link_to "asd", reservation_cabin_bicycle_path(reservation_id: @reservation.id, id: bicycle), method: :post%></td>
    </tr>
  <% end %>
</table>